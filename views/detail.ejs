<!doctype html>
<html lang="en" ondragstart='return false' onselectstart='return false'>
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>article</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/article.css">
    <link rel="icon" href="/images/bitbug_favicon.ico" type='image/x-icon'>
</head>
<body>
    <% include backtop.ejs %>
    <% include header.ejs %>
    <div class="container" id="article">
        <div class="show">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <% for(var j in data){ %>
                        <img class="img-thumbnail" src="/images/poster/<%= data[j].id %>.png" alt="">
                    <% } %>
                </div>
            </div>
            <div class="newview">
                <a href="/" class="btn btn-primary"><< 返回</a>
                <a href="<%= data[j].href %>" class="btn btn-primary" target="_blank">预览</a>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a href="#comments" data-toggle="tab">评论</a>
                    </li>
                    <li><a href="#html" data-toggle="tab">HTML</a></li>
                    <li><a href="#css" data-toggle="tab">CSS</a></li>
                    <li><a href="#js" data-toggle="tab">JS</a></li>
                </ul>
                <div id="myTabContent" class="tab-content ">
                    <div class="tab-pane fade in active" id="comments">
                        <form action="/detail/<%= data[j].id %>.html" method="post">
                            <label for="comment">留言板：</label>
                            <textarea name="comment" autofocus class="form-control" placeholder="发表一下你的看法吧 : )" rows="5"></textarea><br>
                            <input type="submit" class="btn btn-default">
                        </form>
                        <ol id="commentslist">
                            <% if(comments){%>
                            <%for(var i in comments){%>
                            <li>
                                <div class="title">
                                    <h4>孙之间：</h4>
                                    <p><%= comments[i].time %></p>
                                </div>
                                <p><%= comments[i].content %></p>
                                <button class="btn btn-default" disabled>回复</button>
                            </li>
                            <%}%>
                            <%}%>
                        </ol>
                    </div>
                    <div class="tab-pane fade" id="html">
                        <code>html</code>
                    </div>

                    <div class="tab-pane fade" id="css">
                        <code>css</code>
                    </div>

                    <div class="tab-pane fade" id="js">
                        <code>js</code>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% include floor.ejs %>
    <script src='/js/jquery-1.12.1.min.js'></script>
    <script src='/js/bootstrap.min.js'></script>
    <script src='/js/article.js'></script>
</body>
</html>